
<%= form_for [current_client, @appointment] do |f| %>

  <%= f.label "When?" %> <br>
  <%= f.datetime_select :appt_date_time, { :twelve_hour => true, :ampm => true, 
    :minute_step => 30, :start_hour => 9, :end_hour => 20} %> <br> <br>

  <%= f.label "Stylist" %> 
  <% Stylist.all.each do |s| %> <br>
    <%= f.radio_button(:stylist, "#{s.id}") %>
    <%= f.label :stylist, "#{s.first_name}" %>
  <% end %> <br> <br>

  
  <%= f.label :servs %> <br>
  <%= collection_check_boxes :appointment, :servs, Service.all, :id, :name %>

  <br> <br>
  <%= f.submit "Submit", class: 'btn' %>

<% end %>
