
<%= form_for [current_client, @appointment] do |f| %>

  <div class="apptForm text-center">
    <%= f.label "When?" %> <br>
    <%= f.datetime_select :appt_date_time, { :twelve_hour => true, :ampm => true, 
      :minute_step => 30, :start_hour => 9, :end_hour => 20 }, { class: 'form-control'} %>
  </div>

  <div class="apptForm">
    <%= f.label "Choose Your Stylist", class: "text-center" %> <br>
    <%= f.collection_radio_buttons(:stylist_id, Stylist.all, :id, :first_name) do |b|
      b.label(class: 'radio') { b.radio_button + ' ' + b.text }
    end
    %>
  </div>
  
  <div class="apptForm">
    <%= f.label "Choose Your Services" %> <br>
    <%= f.collection_check_boxes(:offering_ids, Offering.all, :id, :name) do |b|
      b.label(class: 'checkbox') { b.check_box + ' ' + b.text }
    end
    %>
  </div>
  
  <div class="apptForm">
    <%= f.submit "Submit", class: 'btn btn-success btn-block' %>
  </div>

<% end %>

