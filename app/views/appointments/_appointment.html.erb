
<%= form_for [current_client, @appointment] do |f| %>

  <%= f.label "When?" %> <br>
  <%= f.datetime_select :appt_date_time, { :twelve_hour => true, :ampm => true, 
    :minute_step => 30, :start_hour => 9, :end_hour => 20} %> <br> <br>

  <%= f.label "Stylist" %> 
  <% Stylist.all.each do |x| %> <br>
    <%= f.radio_button(:stylist, "#{x.id}") %>
    <%= f.label :stylist, "#{x.first_name}" %>
  <% end %> <br> <br>

  <%= f.label "Services" %>
  <% Service.all.each do |s| %> <br>
    <%= f.label "Base Price: #{s.price.to_f}" %>
    
  <% end %>

  <br> <br>
  <%= f.submit "Submit", class: 'btn' %>

<% end %>
